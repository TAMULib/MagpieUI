{
  "name": "magpie",
  "private": true,
  "version": "1.0.0",
  "description": "Metadata Assignment GUI Providing Import and Export",
  "repository": "https://github.com/TAMULib/MetadataAssignmentToolUI",
  "license": "MIT",
  "scripts": {
    "pretest": "npm install",
    "postinstall": "grunt",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run",
    "test-ci": "karma start karma.conf.js --no-auto-watch --single-run --browsers=Chrome",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "stop": "wvr server --stop",
    "start": "wvr server -b /magpie --prod --uid magpie-webserver",
    "start-dev": "wvr server -b /magpie --uid magpie-webserver"
  },
  "dependencies": {
    "weaver-ui-core": "git+https://github.com/TAMULib/Weaver-UI-Core.git#2.x",
    "ng-csv": "0.3.6",
    "ng-file-upload": "12.2.13",
    "ng-table": "3.0.1"
  },
  "devDependencies": {
    "grunt": "1.0.3",
    "grunt-cli": "1.3.1",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-jshint": "1.1.0",
    "grunt-contrib-symlink": "1.0.0",
    "grunt-contrib-uglify": "4.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-karma-coveralls": "2.5.4",
    "grunt-sass": "3.0.1",
    "grunt-usemin": "3.1.1",
    "http-server": "0.11.1",
    "jshint-stylish": "2.2.1",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-firefox-launcher": "1.1",
    "karma-jasmine": "1.1.2",
    "karma-junit-reporter": "1.2.0",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "node-sass": "4.9.3",
    "protractor": "5.4.0"
  }
}
